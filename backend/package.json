{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend for notanda",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "build": "tsup src/server.ts --format esm --clean",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "test": "echo \"No backend tests specified\" && exit 0",
    "db:setup": "node db/setup.js",
    "db:seed": "node db/seed.js",
    "db:clear": "node db/clear.js",
    "db:destroy": "node db/destroy.js"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
